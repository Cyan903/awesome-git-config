#!/usr/bin/env bash

# Simple bookmarking script.
#  Required:
#  - $EDITOR (can be any editor)
#  - xdotool
#  - fzf
#  - rofi

marks="$XDG_DATA_HOME/bookmarks"

usage() {
    cat <<EOF
X11 Bookmarking Rofi/fzf Script

Usage: bookmark [options]

Options:
  edit    open the bookmarks storage with "$EDITOR"
  add     append a bookmark, supports piping
  show    type the bookmark with xdotool, select using fzf or rofi
  help    display help
EOF
}

add() {
    read -r -p "-> " val
    printf "%s\n" "$val" >> "$marks"
}

show() {
    local sel=""
    
    if [[ $1 == "menu" ]]
        then sel=$(rofi -disable-history -dmenu < "$marks")
        else sel=$(fzf < "$marks")
    fi

    xdotool type "$sel"
}

# Parse arguments & run
if [[ ! -f $marks ]]; then
    printf "" >> "$marks"
    echo "$marks created!"
    exit 1
fi

case $1 in
    edit)
        $EDITOR "$marks"
    ;;
    
    add) add;;
    show) show "$2";;

    *)
        usage
        exit 1
    ;;
esac
